require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "puavo-client"
    gem.summary = "Simple ruby wrapper for the Puavo API"
    gem.email = "puavo@opinsys.fi"
    gem.homepage = "https://github.com/opinsys/puavo-client"
    gem.description = "Simple ruby wrapper for the Puavo API"
    gem.authors = "Jouni Korhonen"
  end

  Jeweler::GemcutterTasks.new
rescue LoadError => e
  puts e
  puts "Jeweler, or one of its dependencies, is not available. Install it with: gem install jeweler"
end