#!/bin/sh

help () {
    echo "
    usage: $(basename $0)

    Resolve puavo api server from dns. If the device type is laptop and dns resolve
    fails it will return the global fallback server.
"
}

[ "$1" = "--help" -o "$1" = "-h" ] && help && exit 0

set -eu

puavo_domain=$(cat /etc/puavo/domain)

dig_res=$(dig +time=2 +tries=1 SRV _puavo-api._tcp.${puavo_domain} +search +short)

# dig does not exit with zero exit status even if the search fails. it will
# just give an empty response
if [ "$dig_res" != "" ]; then
    echo -n $dig_res | awk '{ sub(/\.$/, ""); printf "https://%s:%s", $4, $3 }'
    exit 0
fi

if [ $(cat /etc/puavo/hosttype) = "laptop" ]; then
    echo -n "https://api.opinsys.fi"
    exit 0
fi

# no server was found :(
exit 1
